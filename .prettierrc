printWidth: 100
parser: typescript
tabWidth: 2
semi: true
singleQuote: true
trailingComma: all
bracketSpacing: true
jsxBracketSameLine: false
arrowParens: avoid


overrides:
- files: "*.json"
  options:
    parser: json
    printWidth: 1000
- files: "*.js"
  options:
    parser: babylon
- files: "*.md"
  options:
    parser: markdown    
- files: "*.css"
  options:
    parser: css
